@using OnlineCoursePlatform.App.ViewModels.Course;
@model CourseDetailViewModel

<div class="course-item">
    <h4><strong>Title:</strong> @Model.Title</h4>
    <p class="course-description"><strong>Description:</strong> @Model.Description</p>
    <p class="course-description"><strong>Level:</strong> @Model.Level.Name</p>
    <p class="course-description"><strong>Category:</strong> @Model.Category.Name</p>
    <p class="course-description"><strong>Price:</strong> @Model.Price</p>

    <div class="course-actions">
        <a asp-controller="Lesson" asp-action="CourseOverview" asp-route-courseId="@Model.Id" class="btn-lessons">Lessons</a>
    </div>
</div>