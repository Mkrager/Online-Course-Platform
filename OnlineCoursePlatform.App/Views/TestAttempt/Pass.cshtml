@using OnlineCoursePlatform.App.ViewModels.Test;
@model TestViewModel

<div class="test-form">
    <h2>@Model.Title</h2>

    <form id="testSubmissionForm" method="post">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            <div class="question">
                <div class="question-header">
                    <strong>@question.Text</strong>
                </div>

                @for (int j = 0; j < question.Answers.Count; j++)
                {
                    var answer = question.Answers[j];
                    var inputId = $"q{i}_a{j}";
                    <div class="answer">
                        <input type="radio"
                               name="Answers[@i].SelectedAnswerId"
                               id="@inputId"
                               value="@answer.Id" />
                        <label for="@inputId">@answer.Text</label>
                    </div>
                }
            </div>
        }

        <button type="submit" class="btn-submit">End test</button>
    </form>
</div>
