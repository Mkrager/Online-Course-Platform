<div class="account-container">
    <div class="account-header">
        <h2>Welcome, [Username]</h2>
        <p>Manage your profile and courses easily.</p>
    </div>

    <div class="account-details">
        <div class="profile-section">
            <img src="/lib/img/profile.jpg" alt="Profile Picture" class="profile-image">
            <div class="user-info">
                <p>Email: [user@example.com]</p>
                <p>Member Since: [Date]</p>
            </div>
            <button class="btn-edit">Edit Profile</button>
        </div>

        <div class="courses-section">
            <h3>Your Courses</h3>
            <div class="course-list">
                <!-- Course Example -->
                <div class="course-item">
                    <h4>Course Title 1</h4>
                    <p class="course-description">Short description about the course...</p>
                    <button class="btn-edit-course">Edit</button>
                </div>

                <div class="course-item">
                    <h4>Course Title 2</h4>
                    <p class="course-description">Short description about the course...</p>
                    <button class="btn-edit-course">Edit</button>
                </div>
            </div>

            <button class="btn-add-course">Create New Course</button>
        </div>
    </div>
</div>
