@using OnlineCoursePlatform.App.ViewModels.User
@model UserDetailsResponse;

@if (Model.Roles.Contains("Admin"))
{
    @await Html.PartialAsync("_AdminProfilePartial", Model)
}
else if (Model.Roles.Contains("Moderator"))
{
    @await Html.PartialAsync("_ModeratorProfilePartial", Model)
}
else if (Model.Roles.Contains("Teacher"))
{
    @await Html.PartialAsync("_TeacherProfilePartial", Model)
}
else
{
    @await Html.PartialAsync("_DefaultProfilePartial", Model)
}